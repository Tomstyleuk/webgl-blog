---
// GridItem.astro
export interface Props {
  siteUrl: string;
  imageUrl: string;
  altText: string;
  title: string;
  description: string;
}

const { siteUrl, imageUrl, altText, title, description } = Astro.props;
---

<div class="grid-item">
  <div class="image-section">
    <img src={imageUrl} alt={altText} />
  </div>
  <div class="item_title">
    <h3>{title}</h3>
    <p>{description}</p>
    <a href={siteUrl} title="Live website" target="_blank">Live</a>
  </div>
</div>

<style>
  .grid-item {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto;
    gap: 20px;
  }
  
  .item_title a {
    display: inline-block;
    margin-top: 20px;
    width: max-content;
  }

  .image-section {
    grid-column: 1 / 3;
  }

  .item_title {
    grid-column: 1 / 3;
  }
  
  .item_title h3 {
    font-size: 24px;
    font-weight: 600;
  }
  
  .item_title p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .grid-item {
      grid-template-columns: 1fr;
    }

    .image-section,
    .item_title {
      grid-column: 1 / 2;
    }

    .image-section { 
      grid-row: 1 / 2; 
    }
    
    .item_title {
      grid-row: 2 / 3;
    }
  }
</style>