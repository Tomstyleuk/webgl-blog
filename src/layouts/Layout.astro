  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <div class="title">
            <h1>{title}</h1>
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
